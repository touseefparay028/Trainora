@model LearningManagementSystem.Models.DTO.TimeTableVM

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h3 class="fw-bold text-primary mb-3">
                <i class="bi bi-pencil-square me-2"></i>Edit Time Table Slot
            </h3>
            <hr />
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <form asp-action="EditTimeTable" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CourseId" />

                <div class="row g-3">

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Day</label>
                        <select asp-for="Day" class="form-select" required>
                            <option>Monday</option>
                            <option>Tuesday</option>
                            <option>Wednesday</option>
                            <option>Thursday</option>
                            <option>Friday</option>
                            <option>Saturday</option>
                        </select>
                        <span asp-validation-for="Day"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Start Time</label>
                        <input asp-for="StartTime" type="time" class="form-control" required />
                        <span asp-validation-for="StartTime"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">End Time</label>
                        <input asp-for="EndTime" type="time" class="form-control" required />
                        <span asp-validation-for="EndTime"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Location</label>
                        <input asp-for="LabLocation" class="form-control" required />
                        <span asp-validation-for="LabLocation"></span>
                    </div>

                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-check-circle me-2"></i>Update
                    </button>

                    <a asp-action="ManageTimeTable" asp-route-courseId="@Model.CourseId"
                       class="btn btn-outline-secondary rounded-pill px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
