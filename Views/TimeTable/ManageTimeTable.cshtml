@model LearningManagementSystem.Models.DTO.CourseVM
@{
    ViewData["Title"] = "Manage TimeTable";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h3 class="text-primary fw-bold mb-3">
                <i class="bi bi-journal-bookmark-fill me-2"></i>@Model.Title
            </h3>
            <h6 class="text-secondary">Teacher: @Model.Teacher?.Name</h6>
            <hr />

            <h5 class="fw-bold text-dark mb-3">
                <i class="bi bi-calendar-week me-2 text-primary"></i>Current Timetable
            </h5>

            @if (Model.TimeTables != null && Model.TimeTables.Any())
            {
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Day</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Location</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slot in Model.TimeTables)
                        {
                            <tr>
                                <td>@slot.Day</td>
                                <td>@slot.StartTime</td>
                                <td>@slot.EndTime</td>
                                <td>@slot.LabLocation</td>
                                <td>
                                    <form asp-action="DeleteSlot" asp-controller="TimeTable" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@slot.Id" />
                                        <input type="hidden" name="courseId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this slot?');">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No timetable slots added yet.</p>
            }

            <hr class="my-4" />

            <h5 class="fw-bold text-success mb-3">Add New Slot</h5>

            <form asp-action="CreateTimeTable" asp-controller="TimeTable" method="post">
                <input type="hidden" name="CourseId" value="@Model.Id" />

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Day</label>
                        <select name="Day" class="form-select" required>
                            <option value="">Select Day</option>
                            <option>Monday</option>
                            <option>Tuesday</option>
                            <option>Wednesday</option>
                            <option>Thursday</option>
                            <option>Friday</option>
                            <option>Saturday</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Start Time</label>
                        <input type="time" name="StartTime" class="form-control" required />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">End Time</label>
                        <input type="time" name="EndTime" class="form-control" required />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Location</label>
                        <input type="text" name="LabLocation" class="form-control" required />
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-plus-circle me-2"></i>Add Slot
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
       @if(User.IsInRole("Teacher"))
       {
            <a asp-action="GetCourses" asp-controller="Course" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Back to Courses
            </a>
       }
       else
       {
            <a asp-action="AdminGetCourses" asp-controller="Course" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Back to Courses
            </a>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
