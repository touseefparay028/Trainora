@model LearningManagementSystem.Models.DTO.RegisterDTO

@{
    ViewData["Title"] = "Create Teacher";
 

}

<!-- Bootstrap CSS CDN (if not already included in layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom Styling -->
<style>
    .btn-success:hover {
        background-color: #218838;
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }

    .deep-shadow {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
    }

        .deep-shadow:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
        }
</style>

<div class="container mt-5">
    <div class="row shadow-lg rounded-3 overflow-hidden">
        <!-- Left Section - Teacher Welcome -->
        <div class="col-md-6 bg-white p-5 d-flex flex-column justify-content-center align-items-center text-center border-end">
            <h2 class="text-primary fw-bold mb-3">Empower Education</h2>
            <p class="text-muted">
                Teachers are leaders of tomorrow’s change.
                By joining our platform, you’re stepping into a space where your skills meet opportunity.
            </p>
            <img src="https://cdn-icons-png.flaticon.com/512/3665/3665923.png"
                 alt="Teacher Icon"
                 class="img-fluid mt-4"
                 style="max-height: 200px;" />
            <p class="mt-4 text-secondary small">
                “The art of teaching is the art of assisting discovery.” — Mark Van Doren
            </p>
        </div>

        <!-- Right Section - Form -->
        <div class="col-md-6 bg-light p-5 deep-shadow">
            <div class="card border-0 bg-light">
                <div class="card-header bg-primary text-white text-center rounded-3">
                    <h4>Register New Teacher</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTeacher"   method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                     
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>


                        <div class="d-grid">
                            @* <button type="submit" class="btn btn-success">Create</button> *@
                            <input type="submit" class="btn btn-success" value="Submit" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center bg-light border-0">
                    <a asp-controller="Teacher" asp-action="LoginTeacher" class="btn btn-link">Already have an account? Log In</a>
                </div>
                <div class="card-footer text-center bg-light border-0">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
