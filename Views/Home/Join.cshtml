@{
    ViewData["Title"] = "Join Portal";
    Layout = "~/Views/Shared/General.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #eef2f3, #8e9eab);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-bottom: 60px; /* Space for footer */
        }

        .card-option {
            border: none;
            border-radius: 15px;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: white;
        }

            .card-option:hover {
                transform: translateY(-5px);
                box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.2);
            }

        .card-icon {
            font-size: 4rem;
            color: #0d6efd;
        }

        .btn-custom {
            border-radius: 50px;
            padding: 10px 25px;
            font-size: 1.1rem;
        }

        /* Fade-in on load */
        .fade-load {
            opacity: 0;
            transition: opacity 0.8s ease-in-out;
        }

            .fade-load.show {
                opacity: 1;
            }
    </style>
</head>
<body>

    <main>
        <div class="container text-center fade-load" id="fadeContent">
            <h1 class="mb-4 fw-bold">Welcome to Train𝓞ra</h1>
            <p class="mb-5">Choose your role to get started</p>
            <div class="row justify-content-center g-4">
                <div class="d-flex justify-content-center mb-4">
                    <a asp-action="Login" asp-controller="Admin" class="btn btn-success rounded-pill px-4 py-4 shadow-sm">
                        <i class="bi me-2"></i> Login As Admin
                    </a>
                </div>
                <!-- Teacher Option -->
                <div class="col-md-4">
                    <div class="card card-option p-4 shadow-sm">
                        <i class="bi bi-person-badge-fill card-icon mb-3"></i>
                        <h3 class="fw-bold">Join as a Teacher</h3>
                        <p>Share your expertise, create courses, and inspire students.</p>
                        <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary btn-custom">Register as Teacher</a>
                        <br />
                        <a asp-controller="Teacher" asp-action="LoginTeacher" class="btn btn-success btn-custom">Log In as Teacher</a>
                    </div>
                </div>

                <!-- Student Option -->
                <div class="col-md-4">
                    <div class="card card-option p-4 shadow-sm">
                        <i class="bi bi-mortarboard-fill card-icon mb-3"></i>
                        <h3 class="fw-bold">Join as a Student</h3>
                        <p>Enroll in courses, learn from experts, and grow your skills.</p>
                        <a asp-controller="Student" asp-action="Create" class="btn btn-success btn-custom">Register as Student</a>
                        <br />
                        <a asp-controller="Student" asp-action="LoginStudent" class="btn btn-primary btn-custom">Log In as Student</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap-only fade-in on page load -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const fadeEl = document.getElementById("fadeContent");
            setTimeout(() => fadeEl.classList.add("show"), 200);
        });
    </script>
</body>
</html>
