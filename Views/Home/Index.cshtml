@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
@{
    ViewData["Title"] = "Trainora - Accelerate Your Learning";
    Layout = null;
}

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fdfdfd;
        overflow-x: hidden;
    }

    .navbar-brand {
        font-weight: bold;
        font-size: 1.4rem;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        height: 100vh;
        color: #fff;
        display: flex;
        align-items: center;
        z-index: 2;
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* dark overlay for readability */
            z-index: 1;
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-section h1 {
        font-weight: 700;
        font-size: 2.8rem;
        color: #fff;
    }

    .hero-section p {
        font-size: 1.1rem;
        color: #f0f0f0;
        margin-bottom: 20px;
    }

    #navbarNav ul li {
        transition: all 0.5s;
    }

        #navbarNav ul li:hover {
            background-color: blueviolet;
            border-radius: 12px;
        }

    .btn-primary {
        background-color: #1d4ed8;
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-size: 1rem;
    }

    .btn-outline-primary {
        padding: 12px 28px;
        border-radius: 8px;
        font-size: 1rem;
        color: #fff;
        border-color: #fff;
    }

    .carousel-item {
        height: 100vh;
        background-size: cover;
        background-position: center;
    }

   
    .transparent-navbar {
        background-color: transparent !important;
        box-shadow: none !important;
    }
   

    /* Gradient Contact Section */
    /* .contact-section {
        background: linear-gradient(135deg, #007BFF, #3399FF);
        color: white;
    } */
</style>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<!-- Full-Width Carousel Background -->
<div id="trainoraCarousel" class="carousel slide position-absolute top-0 start-0 w-100" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" style="background-image: url('images/corousel1.jpg');"></div>
        <div class="carousel-item" style="background-image: url('images/corousel2.jpg');"></div>
        <div class="carousel-item" style="background-image: url('images/corousel3.jpg');"></div>
    </div>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top transparent-navbar">
    <div class="container-fluid">
        <a class="navbar-brand text-primary" asp-action="Index" asp-controller="Home">
            Train𝓞ra
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                @* <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-action="Documentation"
                       asp-controller="Home"
                       target="_blank"
                       rel="noopener noreferrer">
                        Documentation
                    </a>
                </li> *@

                <li class="nav-item"><a class="nav-link text-white" asp-action="Features" asp-controller="Home">Features</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-action="About" asp-controller="Home">About</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-action="Contact" asp-controller="Home">Contact Us</a></li>
            </ul>

            @{
                var context = Context; // current HttpContext
                ClaimsPrincipal user = null;

                // Try to authenticate from each custom cookie scheme
                var adminResult = await context.AuthenticateAsync("AdminAuth");
                if (adminResult.Succeeded && adminResult.Principal.Identity?.IsAuthenticated == true)
                {
                    user = adminResult.Principal;
                }
                else
                {
                    var teacherResult = await context.AuthenticateAsync("TeacherAuth");
                    if (teacherResult.Succeeded && teacherResult.Principal.Identity?.IsAuthenticated == true)
                    {
                        user = teacherResult.Principal;
                    }
                    else
                    {
                        var studentResult = await context.AuthenticateAsync("StudentAuth");
                        if (studentResult.Succeeded && studentResult.Principal.Identity?.IsAuthenticated == true)
                        {
                            user = studentResult.Principal;
                        }
                    }
                }

                var userName = user?.Identity?.Name;
                var role = user?.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
            }

            @if (!string.IsNullOrEmpty(userName))
            {
                if (role == "Admin")
                {
                    <a class="btn btn-primary ms-3" asp-action="Dashboard" asp-controller="Dashboard">@userName</a>
                }
                else if (role == "Teacher")
                {
                    <a class="btn btn-primary ms-3" asp-action="TeacherDashboard" asp-controller="TeacherDashboard">@userName</a>
                }
                else if (role == "Student")
                {
                    <a class="btn btn-primary ms-3" asp-action="StudentDashboard" asp-controller="StudentDashboard">@userName</a>
                }
            }
            else
            {
                <a class="btn btn-primary ms-3" asp-action="Join" asp-controller="Home">Log In / Sign Up</a>
            }
        </div>
    </div>
</nav>
<!-- Hero Section -->
<section class="hero-section">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1>Accelerate <br />Your Learning</h1>
                <p>
                    Train𝓞ra is an online platform that offers a wide range of courses
                    to help you develop new skills and advance your career.
                </p>
                <div class="d-flex gap-3">
                    <a class="btn btn-primary" asp-action="Join" asp-controller="Home">Get started</a>
                    <a asp-action="About" asp-controller="Home" class="btn btn-outline-primary">About Train𝓞ra</a>
                </div>
            </div>
        </div>
    </div>
</section>
