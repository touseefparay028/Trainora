@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg text-center p-5 rounded-4" style="max-width: 500px; width: 100%;">
        <div class="mb-3">
            <i class="bi bi-lock-fill text-danger" style="font-size: 3rem;"></i>
        </div>
        <h2 class="text-danger fw-bold">Access Denied</h2>
        <p class="text-muted mb-4">
            You don’t have permission to view this page. You may be logged in as other user<br />
            Or you may not be logged In. <span class="fw-semibold">Please try again</span>
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary w-100">
            <i class="bi bi-box-arrow-in-right me-2"></i> Home
        </a>
    </div>
</div>

