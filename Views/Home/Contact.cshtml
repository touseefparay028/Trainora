@model LearningManagementSystem.Models.DTO.ContactVM
@{
    Layout = "~/Views/Shared/General.cshtml";
}


<link href="~/css/contact.css" rel="stylesheet" />

<h2 class="text-center mt-4 mb-4 contact-title">Contact Us</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="contact-wrapper">

            <form asp-action="Contact" asp-controller="Home" method="post">

                <div class="form-floating mb-4">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-white"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-white"></span>
                </div>

                <div class="form-floating mb-4">
                    <textarea asp-for="Message" class="form-control" style="height:120px;" placeholder="Message"></textarea>
                    <label asp-for="Message"></label>
                    <span asp-validation-for="Message" class="text-white"></span>
                </div>

                <button type="submit" class="btn-contact w-100">Send Message</button>

            </form>

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
