@model LearningManagementSystem.Models.Domains.VideoConference
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/TeacherDashboard.css" rel="stylesheet" />
    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .sidebar div {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px;
            text-align: left;
        }
        .sidebar ul:hover
        {
            background-color: #343a40;
        }
        .sidebar ul
        {
            background-color: #343a40;
            color: #343a40;
        }
        
        .card {
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }

        .dashboard-section {
            padding: 2rem 1rem;
        }

        .card-icon {
            font-size: 2rem;
            color: #0d6efd;
        }

       
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar for desktop -->
            <nav class="col-md-2 sidebar d-none d-md-block" id="sidebarMenu">
                <div class="text-center mb-4">
                    <h4>Teacher Panel</h4>
                </div>

                <a asp-action="TeacherDashboard" asp-controller="TeacherDashboard">Dashboard</a>
                <a asp-action="Create" asp-controller="Course">Add Course</a>
                <a asp-action="GetCourses" asp-controller="Course">View My Courses</a>
                <a asp-action="EnrollmentRequests" asp-controller="Course">
                    Enrollment Requests
                    @if (ViewBag.PendingCount > 0)
                    {
                        <span class="badge bg-danger">@ViewBag.PendingCount</span>
                    }
                </a>
                @* <a asp-action="GetFilesAsync" asp-controller="CreateAssignment">Assignments</a> *@
                <a asp-action="GetCreatedAssignments" asp-controller="CreateAssignment">Created Assignments</a>
                @* <a asp-action="AssignGrades" asp-controller="Teacher">Assign Grades</a> *@
                <a class="dropdown-toggle" data-bs-toggle="dropdown">
                    Create Meet
                </a>
                <ul class="dropdown-menu">
                    @foreach (var batch in Model.BatchList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Teacher"
                               asp-action="StartConference"
                               asp-route-batchId="@batch.id">
                                @batch.Name
                            </a>
                        </li>
                    }
                </ul>
                <a class="dropdown-toggle" data-bs-toggle="dropdown">
                    Chat
                </a>
                <ul class="dropdown-menu">
                    @foreach (var batch in Model.BatchList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="BatchChat"
                               asp-action="Chat"
                               asp-route-id="@batch.id">
                                @batch.Name
                            </a>
                        </li>
                    }
                </ul>

                @* <div class="dropdown">
                    <button class="btn btn-dark w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Create Meet
                    </button>
                    <ul class="dropdown-menu w-100">
                        @foreach (var batch in Model.BatchList)
                        {
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Teacher"
                                   asp-action="StartConference"
                                   asp-route-batchId="@batch.id">
                                    @batch.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div> *@

                <a asp-action="GetConferences" asp-controller="Teacher">Meetings</a>
                <a asp-action="Logout" asp-controller="Teacher">Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <!-- Mobile navbar with hamburger -->
                <nav class="navbar navbar-light bg-white shadow-sm p-3 d-md-none">
                    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
                        <i class="bi bi-list"></i>
                    </button>
                    <span class="navbar-brand ms-2">Welcome, @ViewBag.Name</span>
                </nav>

                <!-- Offcanvas mobile sidebar -->
                <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
                    <div class="offcanvas-header bg-dark text-white">
                        <h5 class="offcanvas-title" id="mobileSidebarLabel">Teacher Panel</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <a class="d-block p-2" asp-action="TeacherDashboard" asp-controller="TeacherDashboard">Dashboard</a>
                        <a class="d-block p-2" asp-action="AddCourse" asp-controller="Teacher">Add Course</a>
                        <a class="d-block p-2" asp-action="MyCourses" asp-controller="Teacher">View My Courses</a>
                        <a asp-action="EnrollmentRequests" asp-controller="Course">
                            Enrollment Requests
                            @if (ViewBag.PendingCount > 0)
                            {
                                <span class="badge bg-danger">@ViewBag.PendingCount</span>
                            }
                        </a>
                        <a class="d-block p-2" asp-action="GetFilesAsync" asp-controller="CreateAssignment">Assignments</a>
                        <a class="d-block p-2" asp-action="GetCreatedAssignments" asp-controller="CreateAssignment">Created Assignments</a>
                        @* <a class="d-block p-2" asp-action="AssignGrades" asp-controller="Teacher">Assign Grades</a> *@
                        
                            <button class="btn w-100 dropdown-toggle text-start " type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Create Meet
                            </button>
                            <ul class="dropdown-menu" createmeet>
                                @foreach (var batch in Model.BatchList)
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Teacher"
                                           asp-action="StartConference"
                                           asp-route-batchId="@batch.id">
                                            @batch.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        <a class="d-block p-2" asp-action="GetConferences" asp-controller="Teacher">Meetings</a>
                        <button class="btn w-100 dropdown-toggle text-start " type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Chat
                        </button>
                         <ul class="dropdown-menu" chat>
                            @foreach (var batch in Model.BatchList)
                            {
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="BatchChat"
                                       asp-action="Chat"
                                       asp-route-id="@batch.id">
                                        @batch.Name
                                    </a>
                                </li>
                            }
                        </ul>
                        <a class="d-block p-2" asp-action="Logout" asp-controller="Teacher">Logout</a>
                    </div>
                </div>
                
                <!-- Dashboard cards -->
                <div class="dashboard-section">
                    <h2 class="fw-bold text-success mb-4">
                        <i class="bi"></i> Welcome, @ViewBag.Name
                    </h2>
                    <div class="row g-4">
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-journal-plus card-icon"></i>
                                <h5 class="mt-2">Add Course</h5>
                                <p>Create new courses for students.</p>
                                <a asp-action="Create" asp-controller="Course" class="btn btn-primary">Add Course</a>
                            </div>
                        </div>
                        @* <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-person-lines-fill card-icon"></i>
                                <h5 class="mt-2">Student Enrollments</h5>
                                <p>View students enrolled in your courses.</p>
                                <a asp-action="StudentEnrollments" asp-controller="Teacher" class="btn btn-primary">View Enrollments</a>
                            </div>
                        </div> *@
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-pencil-square card-icon"></i>
                                <h5 class="mt-2">Give Assignment</h5>
                                <p>Assign homework or tasks to students.</p>
                                <a asp-action="CreateAssignment" asp-controller="CreateAssignment" class="btn btn-primary">Create Assignment</a>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-folder-symlink card-icon"></i>
                                <h5 class="mt-2">Submitted Assignments</h5>
                                <p>Check student submissions.</p>
                                <a asp-action="SubmittedAssignments" asp-controller="CreateAssignment" class="btn btn-primary">Review Submissions</a>
                            </div>
                        </div>
                        @* <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-stars card-icon"></i>
                                <h5 class="mt-2">Assign Grades</h5>
                                <p>Evaluate and assign grades.</p>
                                <a asp-action="AssignGrades" asp-controller="Teacher" class="btn btn-primary">Assign Grades</a>
                            </div>
                        </div> *@
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-journals card-icon"></i>
                                <h5 class="mt-2">My Courses</h5>
                                <p>Check your active courses.</p>
                                <a asp-action="GetCourses" asp-controller="Course" class="btn btn-primary">View Courses</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
