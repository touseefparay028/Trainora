@model IEnumerable<LearningManagementSystem.Models.DTO.StudentAssignmentVM>

@{
    ViewData["Title"] = "My Submissions";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container mt-4">

    <h3 class="mb-4">My Assignment Submissions</h3>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Assignment</th>
                <th>Status</th>
                <th>File</th>
                <th style="width: 150px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Assignment Title -->
                    <td>@item.AssignmentTitle</td>

                    <!-- Status -->
                    <td>
                        @if (item.IsReverted)
                        {
                            <span class="badge bg-warning text-dark">Reverted</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Submitted</span>
                        }
                    </td>

                    <!-- File Path -->
                    <td>
                        @if (!string.IsNullOrEmpty(item.Path))
                        {
                          
                            <a class="btn btn-outline-primary btn-sm" asp-action="ViewAssignment" asp-controller="StudentAssignment" asp-route-Path="@item.Path">View File</a>
                        }
                        else
                        {
                            <span class="text-muted">No File</span>
                        }
                    </td>

                    <!-- Action -->
                    <td>
                        @if (item.IsReverted)
                        {
                            <a asp-action="Update"
                               asp-route-id="@item.Id"
                               class="btn btn-primary btn-sm w-100">
                                Re-Submit
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No Action</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
