@* _TeacherLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Trainora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-action="Index" asp-controller="Home">
                @* <img src="~/images/trainora-logo.png" alt="Trainora Logo" width="40" class="me-2" /> *@
                <span class="fw-bold">Train𝓞ra</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTeacher" aria-controls="navbarTeacher" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTeacher">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="Dashboard" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Admin">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="TeacherDashboard" asp-controller="TeacherDashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Teacher">Logout</a></li>
                    }
                    @* <li class="nav-item"><a class="nav-link" href="/Teacher/Assignments">Assignments</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Teacher/Students">Students</a></li> *@
                   
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    @* <footer class="bg-primary text-white text-center py-3 mt-4 shadow-sm">
        &copy; 2025 Trainora. All rights reserved.
    </footer> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
