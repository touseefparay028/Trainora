@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] TrainOra</title>

    <!-- Bootstrap CSS -->
