<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] TrainOra</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS (Optional) -->
    <style>
        body {
            padding-top: 56px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 15px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand  fw-bold " asp-action="Index" asp-controller="Home">Train𝓞ra</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary ms-3" asp-action="Dashboard" asp-controller="Dashboard">@User.Identity.Name</a>
            }
            else if (User.IsInRole("Teacher"))
            {
                <a class="btn btn-primary ms-3" asp-action="TeacherDashboard" asp-controller="TeacherDashboard">@User.Identity.Name</a>
            }
            else if (User.IsInRole("Student"))
            {
                <a class="btn btn-primary ms-3" asp-action="StudentDashboard" asp-controller="StudentDashboard">@User.Identity.Name</a>
            }
            else
            {

                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Login
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                            <li><a class="dropdown-item" asp-action="Login" asp-controller="Admin" >Admin</a></li>
                            <li><a class="dropdown-item" asp-action="LoginTeacher" asp-controller="Teacher">Teacher</a></li>
                            <li><a class="dropdown-item" asp-action="LoginStudent" asp-controller="Student">Student</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Register
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                            <li><a class="dropdown-item" href="/AdminRegister">Admin</a></li>
                            <li><a class="dropdown-item" href="/TeacherRegister">Teacher</a></li>
                            <li><a class="dropdown-item" href="/StudentRegister">Student</a></li>
                        </ul>
                    </li>

                </ul>
            </div> 

            }
            
           
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    @* <footer class="mt-5">
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year Train𝓞ra</span>
        </div>
    </footer> *@

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
