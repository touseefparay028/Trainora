@model List<LearningManagementSystem.Models.DTO.ContactVM>

@{
    ViewData["Title"] = "Admin Dashboard";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: #fff;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #ddd;
                text-decoration: none;
                display: block;
                padding: 10px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #fff;
                }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }

        .dashboard-section {
            padding: 2rem;
        }

        .card-icon {
            font-size: 2rem;
            color: #dc3545;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar d-none d-md-block">
                <div class="text-center mb-4">
                    <h4>Admin Panel</h4>
                </div>
                <a asp-action="Dashboard" asp-controller="Dashboard">Dashboard</a>
                <a asp-action="GetTeachers" asp-controller="Admin">Manage Teachers</a>
                <a asp-action="GetStudents" asp-controller="Admin">Manage Students</a>
                <a asp-action="EnrollmentRequests" asp-controller="Course">
                    Enrollment Requests
                    @if (ViewBag.PendingCount > 0)
                    {
                        <span class="badge bg-danger">@ViewBag.PendingCount</span>
                    }
                </a>

                <a asp-action="AdminGetCourses" asp-controller="Course">View Courses</a>
                <a asp-action="Create" asp-controller="CreateBatch">Create Batch</a>
                <a asp-action="Logout" asp-controller="Admin">Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <nav class="navbar navbar-light bg-white shadow-sm p-3">
                    <span class="navbar-brand">Welcome, @ViewBag.Name!</span>
                </nav>

                <div class="dashboard-section">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-person-video card-icon"></i>
                                <h5 class="mt-2">View/Manage Teachers</h5>
                                <p>View, approve, or remove teacher accounts.</p>
                                <a asp-action="GetTeachers" asp-controller="Admin" class="btn btn-danger">View/Manage</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-people card-icon"></i>
                                <h5 class="mt-2">Manage Students</h5>
                                <p>View and control student records.</p>
                                <a asp-action="GetStudents" asp-controller="Admin" class="btn btn-danger">Manage</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-clipboard-check card-icon"></i>
                                <h5 class="mt-2">Create/View Announcements</h5>
                                <p>Review Announcements.</p>
                                <a asp-action="Create" asp-controller="Announcements" class="btn btn-danger">Create/View Announcements</a>
                            </div>
                        </div>
                        @* <div class="col-md-4">
                            <div class="card p-4 text-center">
                                <i class="bi bi-graph-up-arrow card-icon"></i>
                                <h5 class="mt-2">Reports & Analytics</h5>
                                <p>Track system activity and reports.</p>
                                <a asp-action="Reports" asp-controller="Admin" class="btn btn-danger">View Reports</a>
                            </div>
                        </div> *@
                    </div>
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="row g-3 mt-4">
                        <h4 class="mb-3">Recent Contact Messages</h4>

                        <div class="col-12">
                            <div class="card shadow-sm border-0" style="border-radius: 1rem;">
                                <div class="card-body" style="max-height: 350px; overflow-y: auto;">
                                    @foreach (var msg in Model)
                                    {
                                        <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                                            <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex justify-content-center align-items-center me-3" style="width:45px; height:45px;">
                                                <i class="bi bi-person-fill fs-5"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-1">@msg.Name</h6>
                                                <small class="text-muted d-block">@msg.Email</small>
                                                <p class="mb-0 mt-1 text-secondary">@msg.Message</p>
                                            </div>
                                        </div>
                                    }

                                    <style>
                                        /* Remove border for last message */
                                        .card-body > div:last-child {
                                            border-bottom: none !important;
                                            margin-bottom: 0 !important;
                                            padding-bottom: 0 !important;
                                        }

                                        /* Scrollbar styling for better UI */
                                        .card-body::-webkit-scrollbar {
                                            width: 6px;
                                        }

                                        .card-body::-webkit-scrollbar-thumb {
                                            background: rgba(220, 53, 69, 0.5); /* red with opacity */
                                            border-radius: 4px;
                                        }

                                            .card-body::-webkit-scrollbar-thumb:hover {
                                                background: rgba(220, 53, 69, 0.8);
                                            }
                                    </style>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted mt-4">No contact messages yet.</p>
                }

            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
