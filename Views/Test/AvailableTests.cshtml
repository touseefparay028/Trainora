@model IEnumerable<LearningManagementSystem.Models.DTO.TestVM.CreateTestVM>

@{
    ViewData["Title"] = "Available Tests";
    var takenTests = ViewBag.TakenTestIds as List<Guid>;
}

<div class="container mt-5">
    <h3 class="fw-bold text-primary mb-4">
        📘 Available Tests for @ViewBag.CourseName
    </h3>
    @if(TempData["SuccessMessage"]!=null)
    {
        <div class="alert alert-info">@TempData["SuccessMessage"]</div>
    }
    @if (!Model.Any())
    {
        <div class="alert alert-info">No tests available for this course yet.</div>
    }
    else
    {
        <table class="table table-striped shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Test Title</th>
                    <th>Total Marks</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model)
                {
                    bool alreadyTaken = takenTests != null && takenTests.Contains(test.TestId);
                    <tr>
                        <td>@test.Title</td>
                        <td>@(test.TotalMarks ?? 0)</td>
                        <td>
                            @if (alreadyTaken)
                            {
                                <span class="badge bg-success">Taken</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Not Taken</span>
                            }
                        </td>
                        <td>
                            @if (!alreadyTaken)
                            {
                                <a asp-action="TakeTest" asp-route-testId="@test.TestId"
                                   class="btn btn-success btn-sm">Start Test</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled>Attempted</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
