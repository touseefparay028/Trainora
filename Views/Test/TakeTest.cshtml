@model LearningManagementSystem.Models.DTO.TestVM.TakeTestVM

@{
    ViewData["Title"] = "Take Test";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<div class="container mt-5">
    <h3 class="fw-bold text-primary mb-4">🧠 Test: @Model.TestTitle</h3>

    @if (Model.Questions == null || !Model.Questions.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            ⚠️ No questions are available in this test yet.
        </div>
    }
    else
    {
        <form asp-action="SubmitTest" method="post" class="shadow p-4 bg-light rounded">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="TestId" />

            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                var q = Model.Questions[i];
                <div class="mb-4">
                    <h5 class="fw-semibold">@($"{i + 1}. {q.QuestionText}")</h5>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="A" required />
                        <label class="form-check-label">A. @q.OptionA</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="B" />
                        <label class="form-check-label">B. @q.OptionB</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="C" />
                        <label class="form-check-label">C. @q.OptionC</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="D" />
                        <label class="form-check-label">D. @q.OptionD</label>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-success mt-3">Submit Test</button>
        </form>
    }
</div>
