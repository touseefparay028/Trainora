@model LearningManagementSystem.Models.DTO.TestVM.TakeTestVM

@{
    ViewData["Title"] = "Take Test";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
    var remainingSeconds = (int)ViewBag.RemainingSeconds;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">🧠 Test: @Model.TestTitle</h3>

        <div class="badge bg-danger fs-6 px-3 py-2 shadow-sm">
            ⏳ Time Left: <span id="timerText"></span>
        </div>
    </div>

    @if (Model.Questions == null || !Model.Questions.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            ⚠️ No questions are available in this test yet.
        </div>
    }
    else
    {
        <form asp-action="SubmitTest" method="post" class="shadow p-4 bg-light rounded" id="testForm">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="TestId" />
            <input type="hidden" asp-for="AttemptId" />    @* 🔹 important *@

            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                var q = Model.Questions[i];
                <div class="mb-4">
                    <h5 class="fw-semibold">@($"{i + 1}. {q.QuestionText}")</h5>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="A" />
                        <label class="form-check-label">A. @q.OptionA</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="B" />
                        <label class="form-check-label">B. @q.OptionB</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="C" />
                        <label class="form-check-label">C. @q.OptionC</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answers[@q.QuestionId.GetHashCode()]" value="D" />
                        <label class="form-check-label">D. @q.OptionD</label>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-success mt-3">Submit Test</button>
        </form>
    }
</div>

@section Scripts {
    <script>
        let remaining = @remainingSeconds;
        const timerEl = document.getElementById('timerText');
        const form = document.getElementById('testForm');

        function updateTimer() {
            if (remaining <= 0) {
                timerEl.textContent = "00:00";
                // 🔹 Bypass HTML5 required checks & auto-submit
                form.noValidate = true;
                form.submit();
                return;
            }

            const mins = Math.floor(remaining / 60);
            const secs = remaining % 60;

            timerEl.textContent =
                mins.toString().padStart(2, '0') + ":" +
                secs.toString().padStart(2, '0');

            remaining--;
        }

        updateTimer();
        setInterval(updateTimer, 1000);
    </script>
}
