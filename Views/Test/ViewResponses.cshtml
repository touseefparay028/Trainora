@model IEnumerable<LearningManagementSystem.Models.DTO.TestVM.TestResponseVM>

@{
    ViewData["Title"] = "Student Test Responses";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5">
    @if (TempData["ErrorMessage"]!=null)
    {
        <div class="alert alert-info">@TempData["ErrorMessage"]</div>
    }
    <h3 class="fw-bold text-primary mb-4">
        🧾 Responses for @ViewBag.TestTitle
    </h3>
    <div class="d-flex flex-wrap justify-content-center justify-content-md-end gap-2">
        <a asp-action="ListByCourse" asp-controller="Test" asp-route-courseId="@ViewBag.CourseId" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Tests
        </a>
        <a asp-action="GetCourses" asp-controller="Course" asp-route-courseId="@ViewBag.CourseId" class="btn btn-primary btn-sm">
            <i></i> Courses
        </a>
    </div>
    <br />
    @if (!Model.Any())
    {
        <div class="alert alert-info">No student has attempted this test yet.</div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm align-middle">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>Student Name</th>
                    <th>Score (Correct Answers)</th>
                    <th>Total Questions</th>
                    <th>Attempted On</th>
                    <th>Assigned Marks</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.StudentName</td>
                        <td>@item.Score</td>
                        <td>@item.TotalQuestions</td>
                        <td>@item.TakenAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                        <td>
                            @if (item.AssignedMarks != null && item.AssignedMarks > 0)
                            {
                                <span class="badge bg-success fs-6">
                                    @item.AssignedMarks / @item.TotalMarks
                                </span>
                            }
                            else
                            {
                                <form asp-action="SaveMarksForStudent" method="post" class="d-flex justify-content-center align-items-center gap-2">
                                    <input type="hidden" name="ResultId" value="@item.ResultId" />
                                    <input type="number"
                                           name="Marks"
                                           class="form-control"
                                           placeholder="Marks"
                                           min="0"
                                           max="@item.TotalMarks"
                                           style="width:100px;" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        💾 Save
                                    </button>
                                </form>
                            }
                        </td>
                        <td>
                            @if (item.AssignedMarks != null && item.AssignedMarks > 0)
                            {
                                <span class="text-muted">✔ Evaluated</span>
                            }
                            else
                            {
                                <span class="text-danger">⏳ Pending</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
