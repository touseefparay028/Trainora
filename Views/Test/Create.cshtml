@model LearningManagementSystem.Models.DTO.TestVM.CreateTestVM

@{
    ViewData["Title"] = "Create Test for " + ViewBag.CourseName;
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

<div class="container mt-5">
    <h3 class="fw-bold text-primary mb-3">📝 Create Test for Course: @ViewBag.CourseName</h3>

    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="CourseId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter test title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TotalMarks" class="form-label fw-semibold"></label>
            <input asp-for="TotalMarks" type="number" class="form-control" placeholder="Enter total marks" />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DurationMinutes" class="form-label fw-semibold"></label>
            <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="Enter duration in minutes" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="ListByCourse" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">⬅ Back</a>
            <button type="submit" class="btn btn-primary">Create Test</button>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
