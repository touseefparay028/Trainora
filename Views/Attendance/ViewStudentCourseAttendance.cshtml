@model LearningManagementSystem.Models.DTO.StudentAttendanceSummaryVM

@{
    ViewData["Title"] = "Attendance Summary";
}

<h2>Attendance Summary</h2>

<div id="printSection">

    <div class="mb-3">
        <strong>Student:</strong> @Model.StudentName <br />
        <strong>Course:</strong> @Model.CourseName <br />
        <strong>Total Classes:</strong> @Model.TotalClasses <br />
        <strong>Classes Attended:</strong> @Model.ClassesAttended <br />
        <strong>Attendance %:</strong>
        @(Model.TotalClasses > 0
                ? ((double)Model.ClassesAttended / Model.TotalClasses * 100).ToString("0.##") + "%"
                : "0%")
        <a asp-action="StudentAttendanceSummary" asp-controller="Attendance" class="btn btn-primary rounded-pill fw-semibold ms-2">
            <i class="bi bi-calendar3"></i> Back To Summary
        </a>
    </div>

    <!-- ✅ Date Range Filter (Right aligned) -->
    <div class="d-flex justify-content-end align-items-center mb-3 gap-2">
        <input type="date" id="fromDate" class="form-control" style="width:180px;" />
        <input type="date" id="toDate" class="form-control" style="width:180px;" />
        <button class="btn btn-success fw-semibold" onclick="filterAttendance()">View by Date</button>
    </div>

    <table class="table table-bordered table-striped" id="attendanceTable">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Present</th>
                <th>Remark</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AttendanceRecords != null && Model.AttendanceRecords.Any())
            {
                int index = 1;
                foreach (var record in Model.AttendanceRecords)
                {
                    <tr>
                        <td>@index</td>
                        <td data-date="@record.Date.ToString("yyyy-MM-dd")">@record.Date.ToString("dd MMM yyyy")</td>
                        <td>@(record.IsPresent ? "Yes" : "No")</td>
                        <td>@record.Remark</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No attendance records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- ✅ Print Button -->
<div class="mt-3">
    <button class="btn btn-primary" onclick="printSection();">
        Print / Save as PDF
    </button>
</div>

@section Scripts {
    <script>
        // ✅ Print only student details and table
        function printSection() {
            var printContents = document.getElementById('printSection').innerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload();
        }

        // ✅ Date Range Filter Logic
               function filterAttendance() {
            const fromDateValue = document.getElementById("fromDate").value;
            const toDateValue = document.getElementById("toDate").value;
            const rows = document.querySelectorAll("#attendanceTable tbody tr");

            // ✅ Validation: require both dates
            if (!fromDateValue || !toDateValue) {
                alert("Please enter both 'From Date' and 'To Date' before filtering.");
                return;
            }

            let visibleCount = 0;

            rows.forEach(row => {
                const dateCell = row.querySelector("td[data-date]");
                if (!dateCell) return;

                const recordDate = new Date(dateCell.getAttribute("data-date"));
                const fromDate = new Date(fromDateValue);
                const toDate = new Date(toDateValue);

                if (recordDate >= fromDate && recordDate <= toDate) {
                    row.style.display = "";
                    visibleCount++;
                } else {
                    row.style.display = "none";
                }
            });

            // Remove old "no record" message if exists
            const tbody = document.querySelector("#attendanceTable tbody");
            const existingMessageRow = document.getElementById("noRecordRow");
            if (existingMessageRow) existingMessageRow.remove();

            // If no visible rows, show message
            if (visibleCount === 0) {
                const noRecordRow = document.createElement("tr");
                noRecordRow.id = "noRecordRow";
                noRecordRow.innerHTML = `
                    <td colspan="4" class="text-center text-danger fw-semibold">
                        No records available for the selected date range.
                    </td>`;
                tbody.appendChild(noRecordRow);
            }
        }

    </script>
}
