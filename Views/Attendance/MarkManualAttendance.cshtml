@model List<LearningManagementSystem.Models.DTO.AttendanceVM>

@{
    ViewData["Title"] = "Mark Attendance";
    var date = (DateTime)ViewBag.Date;
}

<h2>Mark Attendance (@date.ToString("dd-MMM-yyyy"))</h2>

<form asp-action="MarkManualAttendance" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="courseId" value="@ViewBag.CourseId" />
    <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Student</th>
                <th>Batch</th>
                <th>Present</th>
                <th>Absent</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Model[i].StudentName
                        <input type="hidden" name="model[@i].StudentId" value="@Model[i].StudentId" />
                        <input type="hidden" name="model[@i].BatchDMId" value="@Model[i].BatchDMId" />
                    </td>
                    <td>@Model[i].BatchName</td>
                    <td>
                        <input type="radio"
                               name="model[@i].IsPresent"
                               value="true"
                               @(Model[i].IsPresent ? "checked" : "") /> Present
                    </td>
                    <td>
                        <input type="radio"
                               name="model[@i].IsPresent"
                               value="false"
                               @(!Model[i].IsPresent ? "checked" : "") /> Absent
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Attendance</button>
</form>
