@model IEnumerable<LearningManagementSystem.Models.DTO.CourseMaterialVM>

@{
    ViewData["Title"] = "Course Materials";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">📚 Course Materials</h2>
    </div>
    <div>
        <a asp-action="MyCourses" asp-controller="Course" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Enrolled Courses
        </a>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var material in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100" style="border-radius: 1rem;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title fw-semibold text-dark">@material.Title</h5>
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-calendar3"></i> Uploaded: @material.UploadedOn.ToString("dd MMM yyyy")
                                </p>
                                <p class="card-text text-secondary" style="font-size: 0.95rem;">
                                    @material.Description
                                </p>
                            </div>
                            <div class="mt-3">
                                <a asp-action="DownloadCourseMaterial" asp-route-FilePath="@material.FilePath"
                                   class="btn btn-outline-primary w-100"
                                   download>
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4" style="border-radius: 1rem;">
            No materials available for this course yet.
        </div>
    }
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
