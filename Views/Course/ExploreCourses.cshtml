@model IEnumerable<LearningManagementSystem.Models.DTO.CourseVM>

@{
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h2 class="mt-4 mb-4 text-center text-primary fw-bold">Available Courses</h2>

<!-- Message Alert -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">@TempData["Message"]</div>
}

<!-- Top Bar: Search + View My Courses -->
<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <!-- Search Field -->
    <div class="d-flex mb-2 mb-md-0">
        <input type="text" id="searchInput"
               class="form-control rounded-pill me-2"
               placeholder="Search courses..." style="width: 250px;" />
        <button type="button" id="clearSearch" class="btn btn-outline-danger rounded-pill fw-semibold">
            <i class="bi bi-x-circle"></i>
        </button>
    </div>

    <!-- View My Courses -->
    <a asp-action="MyCourses" class="btn btn-outline-primary fw-semibold rounded-pill">
        <i class="bi bi-journal-check me-1"></i> View My Courses
    </a>
</div>

<!-- Courses Grid -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="courseList">
    @foreach (var course in Model)
    {
        <div class="col course-card">
            <div class="card h-100 shadow-sm border-0 rounded-4">
                <div class="card-body d-flex flex-column">
                    <!-- Course Title -->
                    <h5 class="card-title text-truncate fw-bold course-title">@course.Title</h5>

                    <!-- Description -->
                    <p class="text-muted small flex-grow-1 course-desc">@course.Description</p>

                    <!-- Teacher -->
                    <p class="mb-2 course-teacher"><strong>Teacher:</strong> @course.Teacher?.Name</p>

                    <!-- Time Table -->
                    <h6 class="text-secondary mt-2 mb-1">Time Table:</h6>
                    <ul class="list-unstyled small mb-2">
                        @if (course.TimeTables != null && course.TimeTables.Any())
                        {
                            foreach (var slot in course.TimeTables)
                            {
                                <li>@slot.Day — @slot.StartTime.ToString(@"hh\:mm") - @slot.EndTime.ToString(@"hh\:mm") (@slot.LabLocation)</li>
                            }
                        }
                        else
                        {
                            <li class="text-muted">No timetable scheduled</li>
                        }
                    </ul>

                    <!-- Enrolled Students -->
                    <span class="badge bg-primary rounded-pill px-3 py-2 mb-3">
                        Enrolled Students: @course.EnrolledStudentsCount
                    </span>

                    <!-- Enroll Button -->
                    <form asp-action="Enroll" asp-controller="Course" method="post" class="mt-auto">
                        <input type="hidden" name="courseId" value="@course.Id" />
                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-semibold">
                            Enroll Now
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- No Results Message -->
<div id="noResults" class="text-center text-muted mt-5 d-none">
    <i class="bi bi-search fs-2"></i>
    <p class="mt-2">No courses found matching your search.</p>
</div>

<!-- JavaScript for Search -->
@section Scripts {
    <script>
        const searchInput = document.getElementById("searchInput");
        const clearBtn = document.getElementById("clearSearch");
        const courseCards = document.querySelectorAll(".course-card");
        const noResults = document.getElementById("noResults");

        searchInput.addEventListener("keyup", function () {
            const filter = this.value.toLowerCase().trim();
            let visibleCount = 0;

            courseCards.forEach(card => {
                const title = card.querySelector(".course-title").textContent.toLowerCase();
                const desc = card.querySelector(".course-desc").textContent.toLowerCase();
                const teacher = card.querySelector(".course-teacher").textContent.toLowerCase();

                if (title.includes(filter) || desc.includes(filter) || teacher.includes(filter)) {
                    card.style.display = "";
                    visibleCount++;
                } else {
                    card.style.display = "none";
                }
            });

            noResults.classList.toggle("d-none", visibleCount > 0);
        });

        clearBtn.addEventListener("click", function () {
            searchInput.value = "";
            courseCards.forEach(card => card.style.display = "");
            noResults.classList.add("d-none");
        });
    </script>
}
