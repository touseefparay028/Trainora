@model IEnumerable<LearningManagementSystem.Models.DTO.CourseVM>

@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">📘 My Assigned Courses</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center rounded-3 shadow-sm">
            @TempData["Message"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Course Title</th>
                            <th>Description</th>
                            <th>Batch</th>
                            <th>Teacher</th>
                            <th style="width: 40%">Actions</th>
                            <th>Time Table</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@course.Title</td>
                                <td>@course.Description</td>
                                <td>@course.Batch?.Name</td>
                                <td>@course.Teacher?.Name</td>
                                <td>
                                    <div class="d-flex flex-wrap justify-content-center gap-2">
                                        <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.Id" asp-route-BatchId="@course.BatchId"
                                           class="btn btn-sm btn-outline-primary px-3">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </a>

                                        <a asp-action="Details" asp-route-id="@course.Id"
                                           class="btn btn-sm btn-outline-info px-3">
                                            <i class="bi bi-info-circle me-1"></i>Details
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@course.Id"
                                           class="btn btn-sm btn-outline-danger px-3">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>

                                        <a asp-action="GetStudentsByCourse" asp-controller="Attendance" asp-route-courseId="@course.Id"
                                           class="btn btn-sm btn-outline-secondary px-3">
                                            <i class="bi bi-people me-1"></i>Students
                                        </a>

                                        <a asp-action="StartConference" asp-controller="Teacher" asp-route-batchId="@course.BatchId" asp-route-CourseId="@course.Id"
                                           class="btn btn-sm btn-outline-success px-3">
                                            <i class="bi bi-camera-video me-1"></i>Start Session
                                        </a>

                                        <a asp-action="UploadCourseMaterial" asp-controller="CourseMaterial" asp-route-CourseId="@course.Id"
                                           class="btn btn-sm btn-outline-primary px-3">
                                            <i class="bi bi-upload me-1"></i>V/M Materials
                                        </a>
                                        <a asp-action="ListByCourse" asp-controller="Test" asp-route-CourseId="@course.Id"
                                           class="btn btn-sm btn-outline-primary px-3">
                                            <i class="bi bi-upload me-1"></i>View Tests
                                        </a>
                                    </div>
                                </td>

                                <td class="text-center">
                                    @if (course.TimeTables != null && course.TimeTables.Any())
                                    {
                                        <a asp-action="ManageTimeTable" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                           class="btn btn-sm btn-success w-100 rounded-pill">
                                            Manage Time Table
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Create" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                           class="btn btn-sm btn-warning w-100 rounded-pill">
                                            Set Time Table
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
