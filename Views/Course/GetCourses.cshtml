@model IEnumerable<LearningManagementSystem.Models.DTO.CourseVM>

@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/TeacherLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">📘 My Assigned Courses (@ViewBag.CourseCount)</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center rounded-3 shadow-sm">
            @TempData["Message"]
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center rounded-3 shadow-sm mt-4">
            🚫 No courses assigned for you.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-4 p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex gap-2">
                                <!-- 📝 Edit icon -->
                                <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.Id" asp-route-BatchId="@course.BatchId"
                                   class="btn btn-sm btn-outline-primary rounded-circle" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- 🗑 Delete icon -->
                                <a asp-action="Delete" asp-route-id="@course.Id"
                                   class="btn btn-sm btn-outline-danger rounded-circle" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>

                            <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill">
                                @course.Batch?.Name
                            </span>
                        </div>

                        <div class="card-body">
                            <h4 class="fw-bold text-primary mb-2">@course.Title</h4>
                            <p class="text-muted mb-3">@course.Description</p>

                            <div class="mb-3">
                                <strong>Teacher:</strong> @course.Teacher?.Name
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                <a asp-action="GetStudentsByCourse" asp-controller="Attendance" asp-route-courseId="@course.Id"
                                   class="btn btn-sm btn-outline-secondary px-3">
                                    <i class="bi bi-people me-1"></i>Students
                                </a>

                                <a asp-action="StartConference" asp-controller="Teacher" asp-route-batchId="@course.BatchId" asp-route-CourseId="@course.Id"
                                   class="btn btn-sm btn-outline-success px-3">
                                    <i class="bi bi-camera-video me-1"></i>Start Session
                                </a>

                                <a asp-action="UploadCourseMaterial" asp-controller="CourseMaterial" asp-route-CourseId="@course.Id"
                                   class="btn btn-sm btn-outline-primary px-3">
                                    <i class="bi bi-upload me-1"></i>V/M Materials
                                </a>

                                <a asp-action="ListByCourse" asp-controller="Test" asp-route-CourseId="@course.Id"
                                   class="btn btn-sm btn-outline-primary px-3">
                                    <i class="bi bi-upload me-1"></i>View Tests
                                </a>

                                @if (course.TimeTables != null && course.TimeTables.Any())
                                {
                                    <a asp-action="ManageTimeTable" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                       class="btn btn-sm btn-success rounded-pill px-3">
                                        Manage Time Table
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Create" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                       class="btn btn-sm btn-warning rounded-pill px-3">
                                        Set Time Table
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
