@model LearningManagementSystem.Models.DTO.CourseVM

@{
    ViewData["Title"] = "AdminCreateCourse";
}

<h1>AdminCreateCourse</h1>

<h4>CourseVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!--Dropdown Teacher -->
            <div class="form-group mb-3">
                <label asp-for="TeacherId" class="form-label">Assign a teacher</label>
                <select asp-for="TeacherId" asp-items="Model.TeacherList" class="form-control">
                    <option value=""> -- Assign Teacher --</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="BatchId" class="form-label">Select Batch</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-collection-fill"></i></span>
                    <select asp-for="BatchId" asp-items="Model.BatchList" class="form-control">
                        <option value=""> -- Select Batch --</option>
                    </select>
                </div>
                <span asp-validation-for="BatchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
        <a asp-action="AdminGetCourses">Back to List</a>
   
   
</div>

