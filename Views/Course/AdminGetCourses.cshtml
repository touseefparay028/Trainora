@model IEnumerable<LearningManagementSystem.Models.DTO.CourseVM>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-primary">Manage Courses</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center mt-5">
            <i class="bi bi-emoji-frown fs-1 text-secondary"></i>
            <h4 class="mt-3 text-muted">No courses available at the moment.</h4>
            <p class="text-muted mb-4">Start by creating your first course.</p>
            <a asp-action="AdminCreateCourse" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Add New Course
            </a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-end mb-4">
            <a asp-action="AdminCreateCourse" class="btn btn-success rounded-pill px-4 py-2 shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Add New Course
            </a>
        </div>

        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-primary fw-semibold">
                                    <i class="bi bi-journal-bookmark-fill me-2 text-success"></i> @course.Title
                                </h5>
                                <p class="card-text text-muted small">
                                    @course.Description
                                </p>

                                <div class="d-flex align-items-center mt-3">
                                    <i class="bi bi-person-badge-fill text-secondary me-2"></i>
                                    <span class="fw-semibold">@course.Teacher?.Name</span>
                                </div>

                                <div class="mt-3">
                                    <span class="badge bg-success rounded-pill px-3 py-2">
                                        👥 @course.EnrolledStudentsCount students
                                    </span>
                                </div>
                            </div>

                            <div class="mt-4 d-flex justify-content-between">
                                <a asp-action="AdminCourseEdit" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm px-3">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </a>

                                <a asp-action="AdminGetDetails" asp-route-id="@course.Id" class="btn btn-outline-info btn-sm px-3">
                                    <i class="bi bi-info-circle me-1"></i> Details
                                </a>

                                <a asp-action="AdminDelete" asp-route-id="@course.Id"
                                   class="btn btn-outline-danger btn-sm px-3">
                                    <i class="bi bi-trash3-fill me-1"></i> Delete
                                </a>
                            </div>

                            <div class="mt-3 text-center">
                                @if (course.TimeTables != null && course.TimeTables.Any())
                                {
                                    <a asp-action="ManageTimeTable" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                       class="btn btn-primary w-100 rounded-pill fw-semibold shadow-sm">
                                        <i class="bi bi-calendar-week me-2"></i> Manage Time Table
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Create" asp-controller="TimeTable" asp-route-courseId="@course.Id"
                                       class="btn btn-primary w-100 rounded-pill fw-semibold shadow-sm">
                                        <i class="bi bi-calendar-week me-2"></i> Set Time Table
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Optional: Add these to _Layout.cshtml if not already -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
