@{
    ViewData["Title"] = "Student Registration Successful";
}

<div class="d-flex justify-content-center align-items-center flex-column" style="min-height: 70vh;">
    <div class="card shadow p-4 text-center" style="max-width: 500px; border-radius: 15px;">
        <h2 class="text-success mb-3">🎉 Registration Successful!</h2>
        <p class="mb-3">
            We've sent a verification link to your email address.
        </p>
        <p class="text-muted mb-4">
            Please check your inbox (and spam folder) and click on the link to verify your email before logging in.
        </p>

        <a asp-controller="Student" asp-action="LoginStudent" class="btn btn-primary rounded-pill px-4 py-2">
            Go to Login
        </a>
