@model LearningManagementSystem.Models.DTO.RegisterDTO

@{
    ViewData["Title"] = "Student Registration";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <!-- Header -->
                    <h3 class="fw-bold text-center mb-4">Student Registration</h3>

                    <form asp-action="CreateStudent" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-4">
                            <!-- Full Name -->
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-semibold">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-fill"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-semibold">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-telephone-fill"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter your number" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <!-- Enrollment Number -->
                            <div class="col-md-6">
                                <label asp-for="EnrollmentNumber" class="form-label fw-semibold">Enrollment Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-card-list"></i></span>
                                    <input asp-for="EnrollmentNumber" class="form-control" placeholder="Enter your enrollment number" />
                                </div>
                                <span asp-validation-for="EnrollmentNumber" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-shield-lock-fill"></i></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <!-- Address -->
                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-semibold">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-geo-alt-fill"></i></span>
                                    <textarea asp-for="Address" class="form-control" placeholder="Enter your address"></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>

                            <!-- Gender -->
                            <div class="col-6">
                                <label asp-for="gender" class="form-label fw-semibold">Gender</label>
                                <div class="d-flex gap-4 mt-1">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="gender" value="Male" />
                                        <label class="form-check-label"><i class="bi bi-gender-male"></i> Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="gender" value="Female" />
                                        <label class="form-check-label"><i class="bi bi-gender-female"></i> Female</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="gender" value="Other" />
                                        <label class="form-check-label"><i class="bi bi-person-circle"></i> Prefer not to say</label>
                                    </div>
                                </div>
                                <span asp-validation-for="gender" class="text-danger small"></span>
                            </div>

                            <!-- Date of Birth -->
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-semibold">Date of Birth</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-event-fill"></i></span>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>

                            <!-- Course -->
                            <div class="col-6">
                                <label asp-for="Course" class="form-label fw-semibold">Course</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-book-fill"></i></span>
                                    <input asp-for="Course" class="form-control" placeholder="Enter your course name" />
                                </div>
                                <span asp-validation-for="Course" class="text-danger small"></span>
                            </div>

                            <!-- Batch -->
                            <div class="col-6">
                                <label asp-for="BatchDMId" class="form-label">Select Batch</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-collection-fill"></i></span>
                                    <select asp-for="BatchDMId" asp-items="Model.BatchList" class="form-control">
                                        <option value=""> -- Select Batch --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="BatchDMId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn fw-bold text-white py-2"
                                    style="background: linear-gradient(90deg, #4facfe 0%, #6a11cb 100%); border: none;">
                                <i class="bi bi-person-plus-fill me-2"></i> Register
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center bg-light border-top-0 rounded-bottom-4 py-3">
                    <p class="mb-1">Already have an account?</p>
                    <a asp-controller="Student" asp-action="LoginStudent" class="btn btn-link text-decoration-none">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login here
                    </a>
                    <div class="mt-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-house-door-fill me-1"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
